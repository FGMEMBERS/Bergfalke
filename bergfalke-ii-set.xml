        <help>
            <title>Scheibe Bergfalke II/55</title>
            <key>
                    <name>Ctrl-w</name>
                    <desc>Place winch 1000m in front of aircraft</desc>
            </key>
            <key>
                    <name>W</name>
                    <desc>Toggle winch hook</desc>
            </key>
            <key>
